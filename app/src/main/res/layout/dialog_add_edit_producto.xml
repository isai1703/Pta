<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView android:id="@+id/ivProductoDialog" android:layout_width="120dp"
            android:layout_height="120dp" android:layout_gravity="center"
            android:src="@drawable/icon_prueba" />

        <Button android:id="@+id/btnSeleccionarImagen" android:layout_marginTop="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Seleccionar imagen" />

        <EditText android:id="@+id/etNombreProducto" android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText android:id="@+id/etPrecioProducto" android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Precio" />

        <EditText android:id="@+id/etComandoProducto" android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Comando (ej: dispense?product=1)" />
    </LinearLayout>
</ScrollView>
