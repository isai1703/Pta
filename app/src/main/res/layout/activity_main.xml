<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Estado de conexiÃ³n -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/connectionIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_disconnected"/>

    <!-- IP del ESP32 -->
    <TextView
        android:id="@+id/tvIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP: ---"
        android:textSize="16sp"/>

    <!-- Botones principales -->
    <Button
        android:id="@+id/btnConectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar"/>

    <Button
        android:id="@+id/btnEditarIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar IP"/>

    <Button
        android:id="@+id/btnScanIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar ESP32"/>

    <Button
        android:id="@+id/btnEnviarATodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar a todos"/>

    <!-- Nuevos botones para la nueva funcionalidad -->
    <Button
        android:id="@+id/btnScanDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escanear dispositivos en red"/>

    <Button
        android:id="@+id/btnEnviarATodosDetectados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar a todos los detectados"/>

    <!-- Lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
